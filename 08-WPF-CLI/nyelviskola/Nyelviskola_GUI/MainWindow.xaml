<Window x:Class="Nyelviskola_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyelviskola_GUI"
        mc:Ignorable="d"
        Title="Nyelvtanárok adatai" Height="450" Width="400">
    <StackPanel Margin="20">
        <Label Content="Kérem válasszon nyelvet:" Padding="0"/>
        <ComboBox
            Name="LanguageComboBox"
            Margin="0,5,0,20"
            SelectionChanged="LanguageComboBox_SelectionChanged"/>

        <Label Content="Kérem válasszon tanárt:" Padding="0"/>
        <ComboBox
            Name="TeacherComboBox"
            Margin="0,5,0,30"
            IsEnabled="False"
            SelectionChanged="TeacherComboBox_SelectionChanged"/>

        <Grid Name="DataGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Padding="0"
                Content="Telefon:"
                Margin="5"/>

            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Name="PhoneTextBox"
                IsReadOnly="True"
                Margin="5"/>

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Padding="0"
                Margin="5"
                Content="Email:"/>

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Name="EmailTextBox"
                IsReadOnly="True"
                Margin="5"/>

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Padding="0"
                Margin="5"
                Content="Óradíj:"/>
            
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Name="HourlyRateTextBox"
                IsReadOnly="True"
                Margin="5"/>

            <Label
                Grid.Row="2"
                Grid.Column="2"
                Padding="0"
                Margin="5"
                Content="Ft"/>

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Padding="0"
                Margin="5"
                Content="Online:"/>

            <CheckBox
                Grid.Row="3"
                Grid.Column="1"
                Name="OnlineCheckBox"
                IsEnabled="False"
                Margin="5"/>
        </Grid>
    </StackPanel>
</Window>
