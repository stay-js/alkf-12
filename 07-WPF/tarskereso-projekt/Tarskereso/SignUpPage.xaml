<UserControl x:Class="Tarskereso.SignUpPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
        <TextBlock Text="Sign Up" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <TextBlock Text="Name:" Margin="0,10,0,0"/>
        <TextBox Name="NameTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Email:" Margin="0,10,0,0"/>
        <TextBox Name="EmailTextBox" Margin="0,0,0,10"/>

        <TextBlock Text="Password:" Margin="0,10,0,0"/>
        <PasswordBox Name="PasswordBox" Margin="0,0,0,10"/>

        <TextBlock Text="Confirm Password:" Margin="0,10,0,0"/>
        <PasswordBox Name="ConfirmPasswordBox" Margin="0,0,0,10"/>

        <TextBlock Text="Birth:" Margin="0,10,0,0"/>
        <DatePicker Name="DatePicker" Margin="0,0,0,20"/>

        <CheckBox Name="TermsCheckBox" Content="I accept the terms and conditions." Margin="0,0,0,20"/>

        <Button Content="Sign Up" Width="200" Height="40" Click="SignUpButton_Click"/>
    </StackPanel>
</UserControl>
