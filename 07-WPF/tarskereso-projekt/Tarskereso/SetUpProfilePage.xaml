<UserControl x:Class="Tarskereso.SetUpProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
        <TextBlock Text="Set Up Profile" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Gender" VerticalAlignment="Top" Margin="0,0,10,0">
                <StackPanel>
                    <RadioButton
                        Content="Male"
                        Name="RadioButtonMale"
                        GroupName="GenderGroup"
                        Checked="RadioButtonMale_Checked"/>
                    
                    <RadioButton
                        Content="Female"
                        Name="RadioButtonFemale"
                        GroupName="GenderGroup"
                        Checked="RadioButtonFemale_Checked"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="Gender Preference" VerticalAlignment="Top" Margin="10,0,0,0">
                <StackPanel>
                    <RadioButton
                        Content="Male"
                        Name="RadioButtonPreferenceMale"
                        GroupName="PreferenceGenderGroup"
                        Checked="RadioButtonPreferenceMale_Checked"/>
                    
                    <RadioButton
                        Content="Female"
                        Name="RadioButtonPreferenceFemale"
                        GroupName="PreferenceGenderGroup"
                        Checked="RadioButtonPreferenceFemale_Checked"/>
                    
                    <RadioButton
                        Content="Both"
                        Name="RadioButtonPreferenceBoth"
                        GroupName="PreferenceGenderGroup"
                        Checked="RadioButtonPreferenceBoth_Checked"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <TextBlock Text="Interests (seaparate with comma):" Margin="0,10,0,0"/>
        <TextBox
            Name="InterestsTextBox"
            Margin="0,0,0,20"
            Height="100"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto"/>

        <Button Content="Finish" Width="200" Height="40" Click="FinishButton_Click"/>
    </StackPanel>
</UserControl>
