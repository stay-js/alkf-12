<Window x:Class="SudokuGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SudokuGUI"
        mc:Ignorable="d"
        Title="Sudoku" Height="210" Width="540">
    <StackPanel>
        <Grid Margin="10,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="25" />
            </Grid.ColumnDefinitions>

            <TextBlock Margin="10,0" Text="Új feladvány mérete"/>
            <Button
                Grid.Column="1"
                Content="-"
                Margin="2,0"
                Name="MinButton"
                Click="MinButton_Click"/>
            
            <TextBox
                Grid.Column="2"
                Margin="2,0"
                IsEnabled="False"
                Name="SizeTextBox"
                TextAlignment="Center"/>
            
            <Button
                Grid.Column="3"
                Content="+"
                Margin="2,0"
                Name="PlusButton"
                Click="PlusButton_Click"/>
        </Grid>

        <Label Content="Kezdőállapot:" Margin="20,5" Padding="0"/>
        <TextBox
            Name="StartingStateTextBox"
            Margin="20,0"
            TextChanged="StartingStateTextBox_TextChanged"/>

        <Grid Margin="20,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Name="LengthTextBlock" HorizontalAlignment="Left"/>
            
            <Button
                Grid.Column="1"
                Name="CheckButton"
                Padding="2,0"
                HorizontalAlignment="Right"
                Content="Ellenőrzés"
                Click="CheckButton_Click"/>
        </Grid>
    </StackPanel>
</Window>
