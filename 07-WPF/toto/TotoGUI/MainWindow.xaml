<Window x:Class="TotoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TotoGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="350">
    <StackPanel>
        <TextBlock Text="Kérem a forduló eredményeit [1, 2, X]:" Margin="10,5"/>
        <TextBox
            Name="ResultsTextBox"
            Width="250"
            HorizontalAlignment="Left"
            Margin="10,0,10,10"
            TextChanged="ResultsTextBox_TextChanged"/>

        <CheckBox
            Name="IncorrectCharacterCountCheckBox"
            Margin="10,5"
            IsEnabled="False"/>
        
        <CheckBox
            Name="InvalidCharactersInResultsCheckBox"
            Margin="10,5"
            IsEnabled="False"/>

        <Button
            Name="SaveButton"
            Content="Eredmények mentése"
            Width="150"
            HorizontalAlignment="Left"
            Margin="10,15"/>
    </StackPanel>
</Window>
